<% include _layouts/header %>

<h1 class="text-warning letter"><%= title %></h1>

<form method="post" action="/users/register">   

    <div class="form-group">
        <label class="text-warning letter2">Name</label>
        <input type="text" name="name" class="form-control letter2" placeholder="Name">
    </div>

    <div class="form-group">
        <label class="text-warning letter2">Email</label>
        <input type="text" name="email" class="form-control letter2" placeholder="Email">
    </div>

    <div class="form-group">
        <label class="text-warning letter2">Username</label>
        <input type="text" name="username" class="form-control letter2" placeholder="Username">
    </div>

    <div class="form-group">
        <label class="text-warning letter2">Password</label>
        <input type="password" name="password" class="form-control letter2"  placeholder="Password">
    </div>
    
    <div class="form-group">
        <label class="text-warning letter2">Confirm Password</label>
        <input type="password" name="password2" class="form-control letter2"  placeholder="Confirm Password">
    </div>   

    <button type="submit" class="btn btn-primary letterB">Register</button>

</form>


<% include _layouts/footer %>