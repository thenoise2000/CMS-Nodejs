<%- include("_layouts/header") %>

<div class="row products">

    <% products.forEach(function(p) { %>
        
        <div class="col-xs-12 col-md-4" style="margin-top: 5%;">

            <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                <img class="card pimage animated fadeInDown" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
            </a>
            <h3 class="text-warning letter animated fadeInDown"><%= p.title %></h3>
            <h4 class="text-warning letter2 animated fadeInDown">$<%= parseFloat(p.price).toFixed(2) %></h4>
            <a class="vd btn btn-success letterB animated fadeInDown" href="/products/<%= p.category %>/<%= p.slug %>">View Details</a>

        </div>
    <% }) %>
</div>

<%- include("_layouts/footer") %>