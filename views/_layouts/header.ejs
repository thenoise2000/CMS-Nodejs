  </head>

  <body>

    <div class="ajaxbg">
      <div class="ajaxinner">
          <h3>You will being redirected to paypal... </h3>
          <img src="/images/ajax-loader.gif" alt=""/>
      </div>
    </div>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand letter" href="/">MyCms</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
          
            <% pages.forEach(function(page){ %>
              <% if (page.slug == "home") { %>
              <li><a class="letter2" href="/"><%= page.title %></a></li>
              <% } else {%>
              <li><a class="letter2" href="/<%= page.slug %>"><%= page.title %></a></li>
              <% } %>
              <% }); %>

          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <a class="letter2" href="/cart/checkout"><i class='bx bx-cart-alt'></i>My Cart(
                <% if (typeof cart !== "undefined") { %>
                  <%= cart.length %>
                  <% } else {%>
                  0
                  <% } %>
              )
              </a>
            </li>
            
            <% if (user) { %>
              <li><a class="letter2" href="/users/logout">Welcome, <%= user.username %>&nbsp;&nbsp;<i class='bx bxs-x-circle'></i>logout</a></li>
              <% } else {%>
            <li><a class="letter2" href="/users/register"><i class='bx bx-shield-quarter'></i>Register</a></li>
            <li><a class="letter2" href="/users/login"><i class='bx bx-log-in-circle' ></i>Log in</a></li>
            <% } %>
            <% if (user && user.admin == 1) { %>
              <li><a class="letter2" href="/admin/pages">Admin Area <i class='bx bxs-grid'></i></a></li>
              <% }%>

           </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
      <%- messages('messages', locals) %>
      
      <% if (errors) {%>
          <% errors.forEach(function(error) { %>
          <div class="alert alert-danger letter2">
              <%= error.msg %>
          </div>
          <% });%>
      <% }%>

      <div class="row">
          <div class="col-xs-12 col-md-3">
              <h3 class="letter text-warning">Categories</h3>
              <ul class="list-group btn-group">
                  <li class="list-group-item letter2 "><a href="/products">All products</a></li>
                  <% categories.forEach(function(c){ %>
                      <li class="list-group-item"><a class="letter2" href="/products/<%= c.slug %>"><%= c.title %></a></li>
                  <% }); %>
              </ul>
          </div>
          <div class="col-xs-12 col-md-1"></div>
          <div class="col-xs-12 col-md-8">

      

    